pipeline {
    agent any

    tools {
        maven 'maven-lts'
    }

    environment {
        IMAGE_NAME = ''  // Placeholder; weâ€™ll update it dynamically in `script`
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Increment Version') {
            steps {
                script {
                    echo 'Incrementing application version...'
                    sh '''#!/bin/bash
                        mvn build-helper:parse-version versions:set \
                            -DnewVersion=\\${parsedVersion.majorVersion}.\\${parsedVersion.minorVersion}.\\${parsedVersion.nextIncrementalVersion} \
                            versions:commit
                    '''

                    def pom = readFile('pom.xml')
                    def matcher = pom =~ '<version>(.+)</version>'
                    def version = matcher ? matcher[0][1] : 'latest'

                    // This saves the version into the environment for future stages
                    env.IMAGE_NAME = "${version}-${env.BUILD_NUMBER}"
                    echo "New version set: ${env.IMAGE_NAME}"
                }
            }
        }

        stage('Build Application') {
            steps {
                script {
                    echo 'Building the application...'
                    sh 'mvn clean package'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building the Docker image with tag: ${env.IMAGE_NAME}"
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-repo', usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                        sh """#!/bin/bash
                            docker build -t siresol1/my-repos:${env.IMAGE_NAME} .
                            echo \$PASS | docker login -u \$USER --password-stdin
                            docker push siresol1/my-repos:${env.IMAGE_NAME}
                        """
                    }
                }
            }
        }

        stage('Deploy to EC2') {
            steps {
                script {
                    echo "Deploying Docker image: siresol1/my-repos:${env.IMAGE_NAME} to EC2..."
                    // You can add SSH or Ansible deployment logic here
                }
            }
        }

        stage('Commit Version Update') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'github-credentials', usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                        sh """#!/bin/bash
                            git config --global user.email "jenkins@example.com"
                            git config --global user.name "jenkins"
                            git remote set-url origin https://${USER}:${PASS}@github.com/sirsol1/java-maven-app.git
                            git add .
                            git commit -m "ci: version bump" || echo "No changes to commit"
                            git push origin HEAD:jenkins-jobs
                        """
                    }
                }
            }
        }
    }
}
